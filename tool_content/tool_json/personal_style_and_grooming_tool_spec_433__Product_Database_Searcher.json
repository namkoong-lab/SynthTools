{
  "tool_name": "Product Database Searcher",
  "tool_description": "Searches hair care product database based on hair type, concerns, budget, and ingredient preferences to find suitable products across categories.",
  "parameters": {
    "hair_type": {
      "type": "string",
      "required": true,
      "description": "Hair type classification from analysis"
    },
    "scalp_type": {
      "type": "string",
      "required": true,
      "description": "Scalp condition classification"
    },
    "primary_concerns": {
      "type": "array",
      "required": true,
      "description": "Main hair concerns to address",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "budget_range": {
      "type": "string",
      "required": true,
      "description": "Budget category for filtering products"
    },
    "product_categories": {
      "type": "array",
      "required": true,
      "description": "Types of products needed",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "preferred_ingredients": {
      "type": "array",
      "required": false,
      "description": "Ingredients to prioritize in products",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "ingredients_to_avoid": {
      "type": "array",
      "required": false,
      "description": "Ingredients to exclude from results",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "brand_preferences": {
      "type": "array",
      "required": false,
      "description": "Preferred or trusted brands",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "max_results_per_category": {
      "type": "integer",
      "required": false,
      "description": "Maximum products to return per category (1-20)",
      "default": 5
    }
  },
  "error_messages": [
    "Invalid hair type: Hair type must be a valid classification string",
    "Invalid scalp type: Scalp type must be a valid classification string",
    "Empty concerns array: Must specify at least one primary concern",
    "Invalid budget range: Budget must be a valid category string",
    "Empty product categories: Must specify at least one product category needed",
    "Invalid max results: Must be between 1-20 products per category"
  ],
  "usage": "Provide hair and scalp type, concerns, budget range, needed product categories, and optionally ingredient preferences, ingredients to avoid, brand preferences, and result limits.",
  "output_details": {
    "total_products_found": {
      "type": "integer",
      "description": "Number of products matching criteria"
    },
    "products_by_category": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Product recommendations organized by category"
    },
    "price_range_summary": {
      "type": "string",
      "description": "Price range of recommended products"
    },
    "top_matches": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Best matching products overall"
    },
    "search_filters_applied": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Summary of filters used in search"
    }
  }
}