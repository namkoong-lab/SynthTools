{
  "tool_name": "Deployment Manager",
  "tool_description": "Creates and manages Kubernetes deployments with specified container configurations, replicas, and resource constraints.",
  "parameters": {
    "deployment_name": {
      "type": "string",
      "required": true,
      "description": "Name of the deployment to create"
    },
    "namespace": {
      "type": "string",
      "required": true,
      "description": "Namespace for the deployment"
    },
    "kubeconfig": {
      "type": "string",
      "required": true,
      "description": "Base64 encoded kubeconfig for cluster access"
    },
    "image_name": {
      "type": "string",
      "required": true,
      "description": "Container image name with tag"
    },
    "replicas": {
      "type": "integer",
      "required": true,
      "description": "Number of pod replicas"
    },
    "container_port": {
      "type": "integer",
      "required": true,
      "description": "Port exposed by container"
    },
    "cpu_request": {
      "type": "string",
      "required": false,
      "description": "CPU resource request (e.g., 100m, 0.5)",
      "default": "100m"
    },
    "memory_request": {
      "type": "string",
      "required": false,
      "description": "Memory resource request (e.g., 128Mi, 1Gi)",
      "default": "128Mi"
    },
    "cpu_limit": {
      "type": "string",
      "required": false,
      "description": "CPU resource limit (e.g., 500m, 1)",
      "default": "500m"
    },
    "memory_limit": {
      "type": "string",
      "required": false,
      "description": "Memory resource limit (e.g., 512Mi, 2Gi)",
      "default": "512Mi"
    },
    "env_vars": {
      "type": "array",
      "required": false,
      "description": "Environment variables in KEY=VALUE format",
      "items": {
        "type": "string"
      },
      "default": "None"
    },
    "config_maps": {
      "type": "array",
      "required": false,
      "description": "ConfigMap names to mount",
      "items": {
        "type": "string"
      },
      "default": "None"
    },
    "secrets": {
      "type": "array",
      "required": false,
      "description": "Secret names to mount",
      "items": {
        "type": "string"
      },
      "default": "None"
    }
  },
  "error_messages": [
    "Invalid deployment name: Must follow Kubernetes naming conventions.",
    "Namespace not found: Specified namespace does not exist.",
    "Image pull failed: Container image not accessible or does not exist.",
    "Invalid replica count: Must be a positive integer.",
    "Invalid resource format: Use standard Kubernetes resource notation (e.g., 100m, 1Gi).",
    "ConfigMap not found: One or more specified ConfigMaps do not exist.",
    "Secret not found: One or more specified secrets do not exist.",
    "Invalid environment variables: Must be in KEY=VALUE format.",
    "Kubeconfig authentication failed: Verify kubeconfig credentials."
  ],
  "usage": "Provide deployment_name, namespace, kubeconfig, image_name, replicas, and container_port. Optionally configure resource limits, environment variables, ConfigMaps, and secrets.",
  "output_details": {
    "deployment_status": {
      "type": "string",
      "description": "Status of deployment creation"
    },
    "ready_replicas": {
      "type": "integer",
      "description": "Number of ready replicas"
    },
    "pod_names": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Names of created pods"
    },
    "creation_time": {
      "type": "string",
      "description": "Timestamp when deployment was created",
      "format": "date-time"
    }
  }
}