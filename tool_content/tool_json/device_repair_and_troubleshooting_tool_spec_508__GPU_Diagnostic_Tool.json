{
  "tool_name": "GPU Diagnostic Tool",
  "tool_description": "Tests graphics card functionality, memory, thermal performance, and driver stability to identify GPU-related issues.",
  "parameters": {
    "gpu_model": {
      "type": "string",
      "required": true,
      "description": "Graphics card model identifier"
    },
    "vram_size_gb": {
      "type": "integer",
      "required": true,
      "description": "VRAM size in gigabytes"
    },
    "test_3d_rendering": {
      "type": "boolean",
      "required": false,
      "description": "Perform 3D rendering stress test",
      "default": true
    },
    "vram_test_enabled": {
      "type": "boolean",
      "required": false,
      "description": "Test video memory for errors",
      "default": true
    },
    "thermal_monitoring": {
      "type": "boolean",
      "required": false,
      "description": "Monitor GPU temperatures during testing",
      "default": true
    }
  },
  "error_messages": [
    "GPU not detected: Graphics card not found or not properly connected.",
    "Invalid VRAM size: VRAM size must be between 1-32 GB.",
    "Driver issues detected: GPU drivers may be corrupted or outdated.",
    "Thermal protection triggered: Test halted due to excessive GPU temperatures."
  ],
  "usage": "Specify gpu_model and vram_size_gb. Enable various test options to perform comprehensive GPU diagnostics including rendering, memory, and thermal tests.",
  "output_details": {
    "gpu_status": {
      "type": "string",
      "description": "Overall GPU health status"
    },
    "driver_status": {
      "type": "string",
      "description": "Graphics driver status"
    },
    "vram_errors": {
      "type": "integer",
      "description": "Number of VRAM errors detected"
    },
    "max_temperature_celsius": {
      "type": "number",
      "description": "Maximum GPU temperature during test"
    },
    "rendering_score": {
      "type": "integer",
      "description": "3D rendering performance score"
    },
    "artifacts_detected": {
      "type": "boolean",
      "description": "Whether visual artifacts were detected"
    },
    "fan_status": {
      "type": "string",
      "description": "GPU cooling fan status"
    }
  }
}