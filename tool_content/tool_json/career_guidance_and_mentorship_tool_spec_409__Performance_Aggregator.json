{
  "tool_name": "Performance Aggregator",
  "tool_description": "Combines multiple evaluation scores and metrics into comprehensive performance summary with weighted scoring and overall assessment.",
  "parameters": {
    "content_scores": {
      "type": "array",
      "required": true,
      "description": "Content quality scores",
      "items": {
        "type": "number"
      },
      "minItems": 1,
      "maxItems": 30
    },
    "communication_score": {
      "type": "number",
      "required": true,
      "description": "Overall communication skills score (0-100)"
    },
    "technical_score": {
      "type": "number",
      "required": false,
      "description": "Technical accuracy score (0-100)",
      "default": null
    },
    "confidence_score": {
      "type": "number",
      "required": false,
      "description": "Confidence level score (0-100)",
      "default": null
    },
    "scoring_weights": {
      "type": "array",
      "required": false,
      "description": "Weights for different score categories",
      "items": {
        "type": "number"
      },
      "default": [
        0.4,
        0.3,
        0.2,
        0.1
      ]
    },
    "job_role": {
      "type": "string",
      "required": true,
      "description": "Target job position for context"
    },
    "industry": {
      "type": "string",
      "required": true,
      "description": "Industry context for scoring"
    },
    "benchmark_level": {
      "type": "string",
      "required": false,
      "description": "Performance benchmark: entry, mid, senior, executive",
      "default": "mid"
    }
  },
  "error_messages": [
    "Invalid score range: All scores must be between 0 and 100",
    "Weight sum error: Scoring weights must sum to 1.0",
    "Missing required scores: Content and communication scores are mandatory",
    "Invalid benchmark level: Use one of [entry, mid, senior, executive]",
    "Empty content scores: Provide at least one content score"
  ],
  "usage": "Provide content_scores array, communication_score, job_role, and industry. Optionally include technical_score, confidence_score, scoring_weights, and benchmark_level for customized aggregation.",
  "output_details": {
    "overall_score": {
      "type": "number",
      "description": "Weighted overall performance score (0-100)"
    },
    "performance_category": {
      "type": "string",
      "description": "Performance classification (excellent, good, fair, needs improvement)"
    },
    "score_breakdown": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Individual category scores"
    },
    "strengths_summary": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key performance strengths"
    },
    "development_areas": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Primary areas for improvement"
    },
    "benchmark_comparison": {
      "type": "string",
      "description": "Performance relative to benchmark level"
    }
  }
}