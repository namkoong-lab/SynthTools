{
  "tool_name": "Drug Monitoring Scheduler",
  "tool_description": "Creates monitoring schedules for medications requiring laboratory surveillance, vital sign monitoring, or clinical assessments.",
  "parameters": {
    "medications": {
      "type": "array",
      "required": true,
      "description": "Medications requiring monitoring",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 8
    },
    "start_date": {
      "type": "string",
      "required": true,
      "description": "Treatment start date",
      "format": "date-time"
    },
    "treatment_duration": {
      "type": "integer",
      "required": false,
      "description": "Planned treatment duration in days",
      "default": 30
    },
    "patient_risk_factors": {
      "type": "array",
      "required": false,
      "description": "Additional risk factors requiring enhanced monitoring",
      "items": {
        "type": "string"
      },
      "default": []
    }
  },
  "error_messages": [
    "Invalid start date: Provide a valid date-time in ISO 8601 format.",
    "Invalid treatment duration: Duration must be between 1 and 365 days.",
    "No monitoring required: None of the specified medications require routine monitoring.",
    "Medication not found: All medications must be valid drug names."
  ],
  "usage": "Provide medications requiring monitoring and start_date. Specify treatment_duration and patient_risk_factors for customized monitoring schedules.",
  "output_details": {
    "monitoring_schedule": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Scheduled monitoring timepoints"
    },
    "laboratory_tests": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Required laboratory tests"
    },
    "clinical_assessments": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Required clinical evaluations"
    },
    "alert_parameters": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Parameters requiring immediate attention"
    },
    "next_monitoring_date": {
      "type": "string",
      "description": "Next scheduled monitoring date",
      "format": "date-time"
    }
  }
}