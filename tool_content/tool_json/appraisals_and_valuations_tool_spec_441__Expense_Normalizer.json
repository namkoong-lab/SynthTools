{
  "tool_name": "Expense Normalizer",
  "tool_description": "Identifies and adjusts one-time, non-recurring, or non-operational expenses to create normalized expense base for valuation.",
  "parameters": {
    "expense_categories": {
      "type": "array",
      "required": true,
      "description": "Expense category names",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 50
    },
    "expense_amounts": {
      "type": "array",
      "required": true,
      "description": "Expense amounts corresponding to categories",
      "items": {
        "type": "number"
      },
      "minItems": 1,
      "maxItems": 50
    },
    "periods": {
      "type": "array",
      "required": true,
      "description": "Time periods for the expenses",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 10
    },
    "owner_compensation": {
      "type": "number",
      "required": false,
      "description": "Owner/management compensation amounts",
      "default": null
    },
    "market_compensation": {
      "type": "number",
      "required": false,
      "description": "Market-rate compensation for similar roles",
      "default": null
    },
    "depreciation_method": {
      "type": "string",
      "required": false,
      "description": "Depreciation method used (straight-line, accelerated, etc.)",
      "default": "straight-line"
    },
    "industry_benchmarks": {
      "type": "array",
      "required": false,
      "description": "Industry expense ratios for comparison",
      "items": {
        "type": "number"
      },
      "default": null
    },
    "non_recurring_threshold": {
      "type": "number",
      "required": false,
      "description": "Threshold percentage for identifying non-recurring items",
      "default": 5.0
    },
    "professional_fees_baseline": {
      "type": "number",
      "required": false,
      "description": "Normal level of professional fees",
      "default": null
    },
    "related_party_transactions": {
      "type": "array",
      "required": false,
      "description": "Related party transaction amounts to normalize",
      "items": {
        "type": "number"
      },
      "default": null
    },
    "restructuring_costs": {
      "type": "array",
      "required": false,
      "description": "One-time restructuring or acquisition costs",
      "items": {
        "type": "number"
      },
      "default": null
    },
    "rent_vs_market": {
      "type": "number",
      "required": false,
      "description": "Current rent vs market rate differential",
      "default": null
    },
    "litigation_reserves": {
      "type": "number",
      "required": false,
      "description": "Non-recurring litigation or settlement costs",
      "default": null
    },
    "stock_compensation": {
      "type": "number",
      "required": false,
      "description": "Stock-based compensation to potentially add back",
      "default": null
    }
  },
  "error_messages": [
    "Mismatched array lengths: expense_categories and expense_amounts must have the same length.",
    "Invalid expense amounts: All amounts must be non-negative numbers.",
    "Invalid threshold: non_recurring_threshold must be between 0 and 100.",
    "Invalid depreciation method: Method must be one of [straight-line, accelerated, units-of-production, double-declining].",
    "Insufficient data: At least one expense category and amount required."
  ],
  "usage": "Provide expense data by category and period, along with optional normalization parameters. Tool identifies non-recurring items and suggests adjustments.",
  "output_details": {
    "normalized_expenses": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Adjusted expense amounts after normalization"
    },
    "total_adjustments": {
      "type": "number",
      "description": "Total amount of adjustments made"
    },
    "adjustment_details": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Description of each adjustment made"
    },
    "recurring_expense_base": {
      "type": "number",
      "description": "Normalized recurring expense baseline"
    },
    "addback_summary": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Summary of items added back to earnings"
    }
  }
}