{
  "tool_name": "Compliance Monitor",
  "tool_description": "Monitors license compliance by tracking actual content usage against contracted terms, identifying violations and generating compliance reports.",
  "parameters": {
    "license_id": {
      "type": "string",
      "required": true,
      "description": "License agreement identifier to monitor"
    },
    "monitoring_start_date": {
      "type": "string",
      "required": true,
      "description": "Start date for compliance monitoring",
      "format": "date-time"
    },
    "monitoring_end_date": {
      "type": "string",
      "required": true,
      "description": "End date for compliance monitoring",
      "format": "date-time"
    },
    "check_territorial_compliance": {
      "type": "boolean",
      "required": false,
      "description": "Whether to check territorial restrictions",
      "default": true
    },
    "check_temporal_compliance": {
      "type": "boolean",
      "required": false,
      "description": "Whether to check time-based restrictions",
      "default": true
    },
    "check_platform_compliance": {
      "type": "boolean",
      "required": false,
      "description": "Whether to check platform/channel restrictions",
      "default": true
    },
    "check_exclusivity_compliance": {
      "type": "boolean",
      "required": false,
      "description": "Whether to check exclusivity violations",
      "default": true
    }
  },
  "error_messages": [
    "Invalid license ID: License agreement not found in system.",
    "Invalid date range: monitoring_end_date must be after monitoring_start_date.",
    "Monitoring period too long: Maximum monitoring period is 2 years.",
    "No monitoring criteria selected: At least one compliance check must be enabled.",
    "Insufficient usage data: Not enough data available for the specified monitoring period."
  ],
  "usage": "Provide license_id and monitoring date range. Enable specific compliance checks as needed. Tool analyzes actual usage data against license terms and identifies any violations.",
  "output_details": {
    "compliance_status": {
      "type": "string",
      "description": "Overall compliance status: compliant, violations_found, insufficient_data"
    },
    "violation_count": {
      "type": "integer",
      "description": "Total number of compliance violations detected"
    },
    "territorial_violations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of territorial compliance violations"
    },
    "temporal_violations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of time-based compliance violations"
    },
    "platform_violations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of platform/channel compliance violations"
    },
    "exclusivity_violations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of exclusivity compliance violations"
    },
    "compliance_score": {
      "type": "number",
      "description": "Compliance score as percentage (0-100)"
    }
  }
}