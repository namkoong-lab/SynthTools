{
  "tool_name": "EBITDA Calculator",
  "tool_description": "Calculates various EBITDA metrics and adjustments commonly used in business valuation and analysis.",
  "parameters": {
    "net_income": {
      "type": "number",
      "required": true,
      "description": "Net income for the period"
    },
    "interest_expense": {
      "type": "number",
      "required": true,
      "description": "Interest expense"
    },
    "tax_expense": {
      "type": "number",
      "required": true,
      "description": "Tax expense"
    },
    "depreciation": {
      "type": "number",
      "required": true,
      "description": "Depreciation expense"
    },
    "amortization": {
      "type": "number",
      "required": true,
      "description": "Amortization expense"
    },
    "one_time_charges": {
      "type": "array",
      "required": false,
      "description": "One-time or non-recurring charges",
      "items": {
        "type": "number"
      },
      "default": null
    },
    "stock_compensation": {
      "type": "number",
      "required": false,
      "description": "Stock-based compensation expense",
      "default": null
    },
    "management_adjustments": {
      "type": "array",
      "required": false,
      "description": "Management-proposed adjustments",
      "items": {
        "type": "number"
      },
      "default": null
    }
  },
  "error_messages": [
    "Invalid financial inputs: Core financial statement inputs cannot be null or non-numeric.",
    "Unrealistic adjustments: One-time charges or adjustments appear excessive relative to base earnings.",
    "Negative EBITDA concern: Resulting EBITDA is negative, which may indicate operational issues.",
    "Adjustment documentation: Large adjustments require detailed justification for valuation purposes."
  ],
  "usage": "Input core income statement items along with optional adjustment categories. Tool calculates EBITDA and adjusted EBITDA with detailed breakdown.",
  "output_details": {
    "ebitda": {
      "type": "number",
      "description": "Basic EBITDA calculation"
    },
    "adjusted_ebitda": {
      "type": "number",
      "description": "EBITDA after normalization adjustments"
    },
    "adjustment_summary": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Summary of all adjustments made"
    },
    "ebitda_margin": {
      "type": "number",
      "description": "EBITDA margin percentage"
    },
    "quality_rating": {
      "type": "string",
      "description": "Quality assessment of the EBITDA calculation"
    }
  }
}