{
  "tool_name": "Sentence Structure Analyzer",
  "tool_description": "Examines sentence construction for clarity, complexity, fragment detection, run-on sentences, and structural coherence issues.",
  "parameters": {
    "text": {
      "type": "string",
      "required": true,
      "description": "Text containing sentences to analyze"
    },
    "complexity_tolerance": {
      "type": "string",
      "required": false,
      "description": "Acceptable sentence complexity: simple, moderate, or complex",
      "default": "moderate"
    },
    "detect_fragments": {
      "type": "boolean",
      "required": false,
      "description": "Whether to identify sentence fragments",
      "default": true
    },
    "detect_run_ons": {
      "type": "boolean",
      "required": false,
      "description": "Whether to identify run-on sentences",
      "default": true
    }
  },
  "error_messages": [
    "Invalid complexity tolerance: Use one of [simple, moderate, complex].",
    "Empty text: Provide text with sentences for structural analysis.",
    "Text too long: Maximum 20,000 characters for sentence analysis."
  ],
  "usage": "Provide text and optionally set complexity tolerance and detection preferences. Returns structural issues with improvement suggestions.",
  "output_details": {
    "sentence_count": {
      "type": "integer",
      "description": "Total number of sentences analyzed"
    },
    "fragments_found": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Sentence fragments identified"
    },
    "run_on_sentences": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Run-on sentences identified"
    },
    "complexity_scores": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Complexity scores for each sentence (1-10)"
    },
    "structural_suggestions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Suggestions for improving sentence structure"
    },
    "average_sentence_length": {
      "type": "number",
      "description": "Average sentence length in words"
    }
  }
}