{
  "tool_name": "API Endpoint Generator",
  "tool_description": "Generates RESTful API endpoint configurations with HTTP methods, paths, parameters, and response schemas for web applications.",
  "parameters": {
    "resource_name": {
      "type": "string",
      "required": true,
      "description": "Name of the resource (e.g., users, products, orders)"
    },
    "http_methods": {
      "type": "array",
      "required": true,
      "description": "HTTP methods to support",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 5
    },
    "base_path": {
      "type": "string",
      "required": true,
      "description": "Base API path (e.g., /api/v1)"
    },
    "authentication_required": {
      "type": "boolean",
      "required": false,
      "description": "Whether authentication is required for these endpoints",
      "default": true
    },
    "rate_limit": {
      "type": "integer",
      "required": false,
      "description": "Requests per minute limit (10-1000)",
      "default": 100
    },
    "request_validation": {
      "type": "boolean",
      "required": false,
      "description": "Enable request body validation",
      "default": true
    },
    "response_format": {
      "type": "string",
      "required": false,
      "description": "Default response format: json, xml",
      "default": "json"
    },
    "pagination_enabled": {
      "type": "boolean",
      "required": false,
      "description": "Enable pagination for GET requests",
      "default": true
    },
    "cors_enabled": {
      "type": "boolean",
      "required": false,
      "description": "Enable CORS headers",
      "default": true
    },
    "cache_ttl": {
      "type": "integer",
      "required": false,
      "description": "Cache time-to-live in seconds (0-3600)",
      "default": 300
    },
    "allowed_origins": {
      "type": "array",
      "required": false,
      "description": "Allowed CORS origins",
      "items": {
        "type": "string"
      },
      "default": "None"
    }
  },
  "error_messages": [
    "Invalid resource name: Use alphanumeric characters and underscores only",
    "Invalid HTTP method: Use one of [GET, POST, PUT, DELETE, PATCH]",
    "Invalid base path: Must start with / and contain valid URL characters",
    "Invalid rate limit: Must be between 10 and 1000 requests per minute",
    "Invalid response format: Use 'json' or 'xml'",
    "Invalid cache TTL: Must be between 0 and 3600 seconds",
    "Invalid origin format: Provide valid URLs for CORS origins"
  ],
  "usage": "Specify resource_name, http_methods array, and base_path. Configure optional settings for authentication, rate limiting, validation, and CORS as needed.",
  "output_details": {
    "endpoints": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Generated endpoint paths with HTTP methods"
    },
    "route_config": {
      "type": "string",
      "description": "Complete route configuration code"
    },
    "middleware": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Required middleware components"
    }
  }
}