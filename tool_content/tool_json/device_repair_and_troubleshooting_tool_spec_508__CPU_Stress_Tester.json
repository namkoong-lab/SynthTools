{
  "tool_name": "CPU Stress Tester",
  "tool_description": "Performs CPU stress testing, thermal monitoring, and performance validation to identify processor-related issues and thermal problems.",
  "parameters": {
    "cpu_model": {
      "type": "string",
      "required": true,
      "description": "CPU model identifier"
    },
    "core_count": {
      "type": "integer",
      "required": true,
      "description": "Number of CPU cores"
    },
    "base_frequency_ghz": {
      "type": "number",
      "required": true,
      "description": "CPU base frequency in GHz"
    },
    "test_duration_minutes": {
      "type": "integer",
      "required": false,
      "description": "Stress test duration in minutes (1-60)",
      "default": 10
    },
    "thermal_throttle_temp": {
      "type": "integer",
      "required": false,
      "description": "Thermal throttling temperature threshold in Celsius",
      "default": 90
    },
    "test_all_cores": {
      "type": "boolean",
      "required": false,
      "description": "Test all CPU cores simultaneously",
      "default": true
    },
    "include_cache_test": {
      "type": "boolean",
      "required": false,
      "description": "Include CPU cache stress testing",
      "default": true
    },
    "target_cpu_load": {
      "type": "integer",
      "required": false,
      "description": "Target CPU load percentage (50-100)",
      "default": 95
    }
  },
  "error_messages": [
    "Invalid core count: Core count must be between 1-128.",
    "Invalid frequency: Base frequency must be between 0.5-6.0 GHz.",
    "Invalid test duration: Duration must be between 1-60 minutes.",
    "Invalid thermal threshold: Temperature must be between 60-105Â°C.",
    "Invalid CPU load: Target load must be between 50-100%.",
    "CPU not detected: Cannot detect or access CPU for testing.",
    "Thermal protection activated: Test stopped due to high temperatures."
  ],
  "usage": "Specify cpu_model, core_count, and base_frequency_ghz. Configure test_duration_minutes, thermal_throttle_temp, and other options as needed. Monitor temperatures during testing.",
  "output_details": {
    "test_result": {
      "type": "string",
      "description": "Overall CPU test result"
    },
    "max_temperature_celsius": {
      "type": "number",
      "description": "Maximum temperature reached during test"
    },
    "average_frequency_ghz": {
      "type": "number",
      "description": "Average CPU frequency during test"
    },
    "throttling_detected": {
      "type": "boolean",
      "description": "Whether thermal throttling occurred"
    },
    "core_temperatures": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Individual core temperatures"
    },
    "performance_score": {
      "type": "integer",
      "description": "CPU performance score"
    },
    "stability_issues": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Stability issues detected during testing"
    }
  }
}