{
  "tool_name": "Audio Export Manager",
  "tool_description": "Exports completed musical compositions to various audio formats with quality and compression options.",
  "parameters": {
    "format": {
      "type": "string",
      "required": true,
      "description": "Export format: wav, mp3, flac, aiff, ogg"
    },
    "quality": {
      "type": "string",
      "required": true,
      "description": "Audio quality: high, medium, low"
    },
    "sample_rate": {
      "type": "integer",
      "required": false,
      "default": 44100,
      "description": "Sample rate in Hz (22050, 44100, 48000, 96000)"
    },
    "bit_depth": {
      "type": "integer",
      "required": false,
      "default": 16,
      "description": "Bit depth (16, 24, 32)"
    },
    "normalize": {
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Apply normalization to output"
    }
  },
  "error_messages": [
    "Unsupported format: Choose from wav, mp3, flac, aiff, ogg",
    "Invalid quality setting: Choose high, medium, or low",
    "Unsupported sample rate: Use 22050, 44100, 48000, or 96000",
    "Invalid bit depth: Use 16, 24, or 32",
    "Format/quality mismatch: Some combinations not supported for lossy formats"
  ],
  "usage": "Specify export format and quality, optionally set sample rate, bit depth, and normalization. Returns export configuration and file details.",
  "output_details": {
    "export_filename": {
      "type": "string",
      "description": "Generated filename for exported audio"
    },
    "file_size_mb": {
      "type": "number",
      "description": "Estimated file size in megabytes"
    },
    "export_settings": {
      "type": "string",
      "description": "Summary of applied export settings"
    },
    "export_duration": {
      "type": "number",
      "description": "Audio duration in seconds"
    }
  }
}