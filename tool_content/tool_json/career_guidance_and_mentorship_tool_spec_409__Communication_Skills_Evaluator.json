{
  "tool_name": "Communication Skills Evaluator",
  "tool_description": "Assesses verbal communication skills including clarity, articulation, professional language use, and overall presentation quality.",
  "parameters": {
    "responses": {
      "type": "array",
      "required": true,
      "description": "Candidate responses to evaluate",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 30
    },
    "response_times": {
      "type": "array",
      "required": true,
      "description": "Response times in seconds",
      "items": {
        "type": "number"
      },
      "minItems": 1,
      "maxItems": 30
    },
    "communication_aspects": {
      "type": "array",
      "required": false,
      "description": "Specific aspects to evaluate",
      "items": {
        "type": "string"
      },
      "default": [
        "clarity",
        "professionalism",
        "pace",
        "vocabulary"
      ]
    }
  },
  "error_messages": [
    "Array length mismatch: Ensure responses and response_times have the same length",
    "Invalid response times: All response times must be positive numbers",
    "Empty communication aspects: Provide at least one aspect to evaluate",
    "Unsupported communication aspect: Use recognized communication skill categories"
  ],
  "usage": "Provide responses and response_times arrays with matching lengths, optionally specify communication_aspects. Returns comprehensive communication skills assessment.",
  "output_details": {
    "clarity_score": {
      "type": "number",
      "description": "Overall clarity score (0-100)"
    },
    "professionalism_score": {
      "type": "number",
      "description": "Professional communication score (0-100)"
    },
    "pace_score": {
      "type": "number",
      "description": "Response pacing score (0-100)"
    },
    "vocabulary_score": {
      "type": "number",
      "description": "Vocabulary usage score (0-100)"
    },
    "overall_communication_score": {
      "type": "number",
      "description": "Combined communication skills score"
    },
    "communication_feedback": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Specific feedback on communication skills"
    }
  }
}