{
  "tool_name": "Multi-Currency Transaction Processor",
  "tool_description": "Processes validated multi-currency transactions with currency conversion, fee application, and settlement preparation.",
  "parameters": {
    "transaction_id": {
      "type": "string",
      "required": true,
      "description": "Unique transaction identifier"
    },
    "source_amount": {
      "type": "number",
      "required": true,
      "description": "Original transaction amount"
    },
    "source_currency": {
      "type": "string",
      "required": true,
      "description": "Source currency code (ISO 4217)"
    },
    "target_currency": {
      "type": "string",
      "required": true,
      "description": "Target settlement currency code (ISO 4217)"
    },
    "exchange_rate": {
      "type": "number",
      "required": true,
      "description": "Exchange rate for conversion"
    },
    "processing_fee_pct": {
      "type": "number",
      "required": false,
      "description": "Processing fee percentage (0-10)",
      "default": 2.5
    },
    "currency_conversion_fee_pct": {
      "type": "number",
      "required": false,
      "description": "Currency conversion fee percentage (0-5)",
      "default": 1.0
    },
    "merchant_id": {
      "type": "string",
      "required": true,
      "description": "Merchant identifier"
    },
    "payment_method": {
      "type": "string",
      "required": true,
      "description": "Payment method used"
    },
    "priority": {
      "type": "string",
      "required": false,
      "description": "Processing priority: standard, express, urgent",
      "default": "standard"
    }
  },
  "error_messages": [
    "Transaction processing failed: Ensure all required parameters are valid and transaction hasn't been processed already.",
    "Invalid fee percentage: Processing fee must be 0-10%, conversion fee must be 0-5%.",
    "Exchange rate error: Exchange rate must be positive and current.",
    "Insufficient funds: Transaction amount exceeds available limits.",
    "Currency mismatch: Source and target currencies must be different for conversion.",
    "Invalid priority level: Use one of [standard, express, urgent]."
  ],
  "usage": "Provide transaction details including amounts, currencies, exchange rate, and merchant info. Optionally set fee percentages and priority. Returns processed transaction with all calculations.",
  "output_details": {
    "transaction_id": {
      "type": "string",
      "description": "Transaction identifier"
    },
    "processing_status": {
      "type": "string",
      "description": "Processing status: completed, pending, failed"
    },
    "converted_amount": {
      "type": "number",
      "description": "Amount after currency conversion"
    },
    "total_fees": {
      "type": "number",
      "description": "Total fees charged"
    },
    "net_settlement_amount": {
      "type": "number",
      "description": "Final settlement amount after fees"
    },
    "processing_timestamp": {
      "type": "string",
      "description": "When the transaction was processed"
    }
  }
}