{
  "tool_name": "Feedback Report Generator",
  "tool_description": "Creates comprehensive, structured feedback reports with actionable insights, specific examples, and professional presentation formatting.",
  "parameters": {
    "overall_score": {
      "type": "number",
      "required": true,
      "description": "Overall performance score (0-100)"
    },
    "performance_category": {
      "type": "string",
      "required": true,
      "description": "Performance classification"
    },
    "strengths_summary": {
      "type": "array",
      "required": true,
      "description": "Key strengths identified",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 10
    },
    "development_areas": {
      "type": "array",
      "required": true,
      "description": "Areas needing improvement",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 10
    },
    "detailed_scores": {
      "type": "array",
      "required": false,
      "description": "Breakdown of category scores",
      "items": {
        "type": "number"
      },
      "default": null
    },
    "candidate_name": {
      "type": "string",
      "required": false,
      "description": "Candidate name for personalization",
      "default": "Candidate"
    },
    "interview_date": {
      "type": "string",
      "required": false,
      "description": "Interview date",
      "format": "date-time",
      "default": null
    },
    "report_style": {
      "type": "string",
      "required": false,
      "description": "Report formatting style: professional, detailed, concise",
      "default": "professional"
    },
    "include_recommendations": {
      "type": "boolean",
      "required": false,
      "description": "Whether to include specific recommendations",
      "default": true
    },
    "target_audience": {
      "type": "string",
      "required": false,
      "description": "Report audience: candidate, hiring_manager, coach",
      "default": "candidate"
    }
  },
  "error_messages": [
    "Invalid overall score: Score must be between 0 and 100",
    "Empty strengths or development areas: Provide at least one item in each array",
    "Invalid report style: Use one of [professional, detailed, concise]",
    "Invalid target audience: Use one of [candidate, hiring_manager, coach]",
    "Invalid date format: Use ISO 8601 date-time format"
  ],
  "usage": "Provide overall_score, performance_category, strengths_summary, and development_areas. Optionally customize with candidate_name, interview_date, report_style, include_recommendations, and target_audience.",
  "output_details": {
    "report_title": {
      "type": "string",
      "description": "Generated report title"
    },
    "executive_summary": {
      "type": "string",
      "description": "Brief performance overview"
    },
    "detailed_feedback": {
      "type": "string",
      "description": "Comprehensive feedback text"
    },
    "action_items": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Specific actionable recommendations"
    },
    "next_steps": {
      "type": "string",
      "description": "Suggested follow-up actions"
    }
  }
}