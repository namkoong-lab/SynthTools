{
  "tool_name": "Interview Progress Tracker",
  "tool_description": "Tracks interview performance over time, analyzing trends, improvements, and patterns across multiple mock interview sessions.",
  "parameters": {
    "historical_scores": {
      "type": "array",
      "required": true,
      "description": "Previous interview overall scores",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 50
    },
    "session_dates": {
      "type": "array",
      "required": true,
      "description": "Dates of interview sessions",
      "items": {
        "type": "string"
      },
      "minItems": 2,
      "maxItems": 50
    },
    "category_scores": {
      "type": "array",
      "required": false,
      "description": "Category-wise score history",
      "items": {
        "type": "array"
      },
      "default": null
    },
    "tracking_period": {
      "type": "string",
      "required": false,
      "description": "Analysis period: weekly, monthly, quarterly",
      "default": "monthly"
    }
  },
  "error_messages": [
    "Array length mismatch: Historical_scores and session_dates must have equal length",
    "Insufficient data: Provide at least 2 historical data points for trend analysis",
    "Invalid date format: Use ISO 8601 date-time format for session_dates",
    "Invalid tracking period: Use one of [weekly, monthly, quarterly]",
    "Score range error: All scores must be between 0 and 100"
  ],
  "usage": "Provide historical_scores and session_dates arrays with matching lengths and at least 2 data points. Optionally include category_scores and specify tracking_period for detailed analysis.",
  "output_details": {
    "improvement_trend": {
      "type": "string",
      "description": "Overall improvement trend (improving, stable, declining)"
    },
    "trend_percentage": {
      "type": "number",
      "description": "Percentage improvement/decline over period"
    },
    "best_performance": {
      "type": "number",
      "description": "Highest score achieved"
    },
    "recent_performance": {
      "type": "number",
      "description": "Most recent session score"
    },
    "consistency_score": {
      "type": "number",
      "description": "Performance consistency rating (0-100)"
    },
    "progress_insights": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key insights about progress patterns"
    }
  }
}