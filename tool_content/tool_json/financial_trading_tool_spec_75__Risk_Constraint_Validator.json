{
  "tool_name": "Risk Constraint Validator",
  "tool_description": "Validates portfolio allocations against risk constraints including concentration limits, sector limits, and correlation constraints.",
  "parameters": {
    "asset_symbols": {
      "type": "array",
      "required": true,
      "description": "Array of asset symbols in portfolio",
      "items": {
        "type": "string"
      }
    },
    "proposed_weights": {
      "type": "array",
      "required": true,
      "description": "Proposed allocation weights",
      "items": {
        "type": "number"
      }
    },
    "max_individual_weight": {
      "type": "number",
      "required": false,
      "description": "Maximum weight for any single asset (0-1)",
      "default": 0.2
    },
    "max_sector_weight": {
      "type": "number",
      "required": false,
      "description": "Maximum weight for any sector (0-1)",
      "default": 0.4
    },
    "max_correlation": {
      "type": "number",
      "required": false,
      "description": "Maximum allowed correlation between assets (0-1)",
      "default": 0.8
    },
    "max_portfolio_volatility": {
      "type": "number",
      "required": false,
      "description": "Maximum allowed portfolio volatility",
      "default": 0.25
    },
    "min_diversification_ratio": {
      "type": "number",
      "required": false,
      "description": "Minimum required diversification ratio",
      "default": 0.6
    },
    "risk_budget_limits": {
      "type": "array",
      "required": false,
      "description": "Risk budget limits per asset",
      "items": {
        "type": "number"
      },
      "default": []
    }
  },
  "error_messages": [
    "Array length mismatch: asset_symbols and proposed_weights must have same length.",
    "Invalid weights: All weights must be non-negative and sum to 1.0.",
    "Invalid constraint values: All constraint parameters must be between 0 and 1.",
    "Risk budget mismatch: risk_budget_limits array length must match asset count if provided."
  ],
  "usage": "Provide asset_symbols and proposed_weights. Set constraint parameters to validate against risk limits. Empty risk_budget_limits means no individual risk budget constraints.",
  "output_details": {
    "constraints_passed": {
      "type": "boolean",
      "description": "Whether all constraints are satisfied"
    },
    "violations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of constraint violations"
    },
    "portfolio_volatility": {
      "type": "number",
      "description": "Calculated portfolio volatility"
    },
    "diversification_ratio": {
      "type": "number",
      "description": "Portfolio diversification ratio"
    },
    "risk_contributions": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Risk contribution of each asset"
    }
  }
}