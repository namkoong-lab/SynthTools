{
  "tool_name": "Price Rule Evaluator",
  "tool_description": "Applies business pricing rules and algorithms to calculate optimal prices based on cost, competition, demand, and strategic objectives.",
  "parameters": {
    "product_ids": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "required": true,
      "description": "Products to calculate prices for"
    },
    "cost_prices": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "required": true,
      "description": "Product cost prices"
    },
    "competitor_prices": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "required": true,
      "description": "Competitor prices for reference"
    },
    "demand_scores": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "required": true,
      "description": "Demand intensity scores (0-100)"
    },
    "pricing_strategy": {
      "type": "string",
      "required": true,
      "description": "Pricing strategy: competitive, premium, value, penetration, or cost_plus"
    },
    "target_margin": {
      "type": "number",
      "required": false,
      "default": 0.25,
      "description": "Target profit margin (0-1)"
    },
    "price_elasticity": {
      "type": "number",
      "required": false,
      "default": -1.0,
      "description": "Price elasticity coefficient"
    },
    "seasonal_factor": {
      "type": "number",
      "required": false,
      "default": 1.0,
      "description": "Seasonal adjustment multiplier"
    },
    "channel_markup": {
      "type": "number",
      "required": false,
      "default": 0.0,
      "description": "Additional channel-specific markup"
    },
    "minimum_price": {
      "type": "number",
      "required": false,
      "default": 0.01,
      "description": "Absolute minimum price floor"
    },
    "maximum_price": {
      "type": "number",
      "required": false,
      "default": 99999.99,
      "description": "Maximum price ceiling"
    }
  },
  "error_messages": [
    "Array length mismatch: All input arrays must have the same length.",
    "Invalid pricing strategy: Use one of [competitive, premium, value, penetration, cost_plus].",
    "Invalid parameter range: target_margin must be 0-1, demand_scores 0-100, seasonal_factor > 0.",
    "Price boundary violation: minimum_price must be less than maximum_price."
  ],
  "usage": "Provide product data arrays and select a pricing_strategy. Adjust optional parameters for fine-tuning price calculations based on market conditions.",
  "output_details": {
    "calculated_prices": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Optimized prices calculated by the rule engine"
    },
    "price_adjustments": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Applied adjustments from base cost"
    },
    "margin_achieved": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Actual margins achieved for each product"
    },
    "strategy_applied": {
      "type": "string",
      "description": "Pricing strategy that was applied"
    }
  }
}