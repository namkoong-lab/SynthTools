{
  "tool_name": "Audience Preference Predictor",
  "tool_description": "Predicts comedy style preferences and content sensitivities based on demographic profiles, generating preference scores for different types of humor.",
  "parameters": {
    "age_distribution": {
      "type": "array",
      "required": true,
      "description": "Age group percentages",
      "items": {
        "type": "number"
      }
    },
    "gender_split": {
      "type": "array",
      "required": true,
      "description": "Gender distribution percentages",
      "items": {
        "type": "number"
      }
    },
    "income_levels": {
      "type": "array",
      "required": true,
      "description": "Income bracket percentages",
      "items": {
        "type": "number"
      }
    },
    "education_levels": {
      "type": "array",
      "required": true,
      "description": "Education level percentages",
      "items": {
        "type": "number"
      }
    },
    "cultural_context": {
      "type": "string",
      "required": false,
      "description": "Regional cultural context (urban, suburban, rural)",
      "default": "urban"
    }
  },
  "error_messages": [
    "Invalid demographic data: All percentage arrays must sum to approximately 100 and contain non-negative values.",
    "Mismatched array lengths: Age, gender, income, and education arrays must have expected number of elements.",
    "Invalid cultural context: Must be one of 'urban', 'suburban', or 'rural'."
  ],
  "usage": "Input demographic distribution arrays from venue analysis to generate comedy preference predictions and content sensitivity warnings.",
  "output_details": {
    "observational_score": {
      "type": "number",
      "description": "Preference score for observational humor (0-100)"
    },
    "political_score": {
      "type": "number",
      "description": "Preference score for political humor (0-100)"
    },
    "relationship_score": {
      "type": "number",
      "description": "Preference score for relationship humor (0-100)"
    },
    "workplace_score": {
      "type": "number",
      "description": "Preference score for workplace humor (0-100)"
    },
    "edgy_tolerance": {
      "type": "number",
      "description": "Tolerance for edgy/controversial content (0-100)"
    },
    "sensitivity_warnings": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Topics to avoid based on demographic analysis"
    }
  }
}