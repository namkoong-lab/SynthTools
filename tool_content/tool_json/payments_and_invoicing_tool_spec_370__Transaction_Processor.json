{
  "tool_name": "Transaction Processor",
  "tool_description": "Processes validated payment transactions by communicating with payment gateways and handling authorization requests.",
  "parameters": {
    "transaction_id": {
      "type": "string",
      "required": true,
      "description": "Unique transaction identifier"
    },
    "encrypted_card_data": {
      "type": "string",
      "required": true,
      "description": "Encrypted card information"
    },
    "amount": {
      "type": "number",
      "required": true,
      "description": "Transaction amount"
    },
    "currency": {
      "type": "string",
      "required": true,
      "description": "Transaction currency (ISO 3-letter code)"
    },
    "merchant_id": {
      "type": "string",
      "required": true,
      "description": "Merchant identifier"
    },
    "gateway_id": {
      "type": "string",
      "required": true,
      "description": "Selected payment gateway identifier"
    },
    "customer_id": {
      "type": "string",
      "required": true,
      "description": "Customer identifier"
    },
    "billing_address": {
      "type": "string",
      "required": true,
      "description": "Encrypted billing address information"
    },
    "transaction_type": {
      "type": "string",
      "required": false,
      "description": "Type of transaction (sale, auth_only, capture)",
      "default": "sale"
    },
    "timeout_seconds": {
      "type": "integer",
      "required": false,
      "description": "Gateway communication timeout in seconds",
      "default": 30
    }
  },
  "error_messages": [
    "Invalid transaction ID: Transaction ID must be a non-empty unique string.",
    "Decryption failed: Unable to decrypt card data - verify encryption and key validity.",
    "Gateway communication error: Unable to communicate with selected payment gateway - check gateway status.",
    "Transaction declined: Payment was declined by the card issuer or gateway.",
    "Insufficient funds: Transaction declined due to insufficient funds on the card.",
    "Processing timeout: Gateway did not respond within the specified timeout period.",
    "Invalid merchant credentials: Merchant ID is not recognized by the payment gateway."
  ],
  "usage": "Provide all required transaction details including encrypted card data and gateway information. Set transaction_type based on processing needs (sale for immediate charge).",
  "output_details": {
    "processing_status": {
      "type": "string",
      "description": "Transaction processing status (approved, declined, error)"
    },
    "authorization_code": {
      "type": "string",
      "description": "Authorization code from payment gateway"
    },
    "gateway_response": {
      "type": "string",
      "description": "Detailed response message from gateway"
    },
    "transaction_reference": {
      "type": "string",
      "description": "Gateway transaction reference number"
    },
    "processing_timestamp": {
      "type": "string",
      "description": "When the transaction was processed"
    }
  }
}