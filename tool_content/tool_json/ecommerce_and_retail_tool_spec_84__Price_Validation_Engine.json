{
  "tool_name": "Price Validation Engine",
  "tool_description": "Validates price data against business rules, market constraints, and regulatory requirements to ensure pricing accuracy and compliance.",
  "parameters": {
    "prices": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "required": true,
      "description": "Array of prices to validate"
    },
    "product_categories": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "required": true,
      "description": "Product categories for context-specific validation"
    },
    "min_price_threshold": {
      "type": "number",
      "required": false,
      "default": 0.01,
      "description": "Minimum allowable price"
    },
    "max_price_threshold": {
      "type": "number",
      "required": false,
      "default": 99999.99,
      "description": "Maximum allowable price"
    },
    "margin_requirement": {
      "type": "number",
      "required": false,
      "default": 0.1,
      "description": "Minimum profit margin requirement (0-1)"
    }
  },
  "error_messages": [
    "Invalid price range: Prices must be positive numbers within specified thresholds.",
    "Margin violation: One or more prices fall below the required profit margin.",
    "Category mismatch: Number of prices and categories must match."
  ],
  "usage": "Provide prices array and corresponding product_categories. Optionally set price thresholds and margin requirements for validation.",
  "output_details": {
    "validation_passed": {
      "type": "boolean",
      "description": "Overall validation result"
    },
    "valid_prices": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Prices that passed validation"
    },
    "invalid_prices": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Prices that failed validation"
    },
    "violation_reasons": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Reasons for validation failures"
    }
  }
}