{
  "tool_name": "Qualification Scorer",
  "tool_description": "Aggregates assessment results from all evaluation tools to calculate final vendor qualification scores and determine approval recommendations.",
  "parameters": {
    "registration_id": {
      "type": "string",
      "required": true,
      "description": "Vendor registration identifier"
    },
    "document_score": {
      "type": "number",
      "required": true,
      "description": "Document verification score (0-100)"
    },
    "financial_score": {
      "type": "number",
      "required": true,
      "description": "Financial assessment score (0-100)"
    },
    "compliance_score": {
      "type": "number",
      "required": true,
      "description": "Compliance verification score (0-100)"
    },
    "reference_score": {
      "type": "number",
      "required": true,
      "description": "Reference validation score (0-100)"
    },
    "weight_documents": {
      "type": "number",
      "required": false,
      "description": "Weight for document score (0-1)",
      "default": 0.25
    },
    "weight_financial": {
      "type": "number",
      "required": false,
      "description": "Weight for financial score (0-1)",
      "default": 0.35
    },
    "weight_compliance": {
      "type": "number",
      "required": false,
      "description": "Weight for compliance score (0-1)",
      "default": 0.25
    },
    "weight_references": {
      "type": "number",
      "required": false,
      "description": "Weight for reference score (0-1)",
      "default": 0.15
    },
    "minimum_threshold": {
      "type": "number",
      "required": false,
      "description": "Minimum score required for qualification (0-100)",
      "default": 70
    }
  },
  "error_messages": [
    "Registration not found: The provided registration_id does not exist in the system.",
    "Invalid score range: All scores must be between 0 and 100.",
    "Invalid weights: All weight values must be between 0 and 1 and sum to 1.0.",
    "Threshold out of range: minimum_threshold must be between 0 and 100.",
    "Missing assessment data: One or more required assessment scores are not provided."
  ],
  "usage": "Provide registration_id and all assessment scores. Optionally adjust scoring weights and minimum_threshold. The tool calculates weighted final scores and qualification recommendations.",
  "output_details": {
    "final_score": {
      "type": "number",
      "description": "Weighted final qualification score (0-100)"
    },
    "qualification_status": {
      "type": "string",
      "description": "Final qualification decision (qualified, conditionally qualified, not qualified)"
    },
    "strengths": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Vendor's key strengths identified during assessment"
    },
    "improvement_areas": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Areas where vendor needs improvement"
    },
    "recommendation": {
      "type": "string",
      "description": "Final recommendation for vendor approval"
    }
  }
}