{
  "tool_name": "Prescription Generator",
  "tool_description": "Creates formal prescription records with all required medical and legal information for pharmacy dispensing.",
  "parameters": {
    "patient_id": {
      "type": "string",
      "required": true,
      "description": "Unique patient identifier"
    },
    "prescriber_id": {
      "type": "string",
      "required": true,
      "description": "Prescribing physician identifier"
    },
    "drug_name": {
      "type": "string",
      "required": true,
      "description": "Name of prescribed medication"
    },
    "dosage": {
      "type": "string",
      "required": true,
      "description": "Prescribed dose with units"
    },
    "frequency": {
      "type": "string",
      "required": true,
      "description": "Dosing frequency instructions"
    },
    "quantity": {
      "type": "integer",
      "required": true,
      "description": "Number of units to dispense (1-1000)"
    },
    "refills_authorized": {
      "type": "integer",
      "required": true,
      "description": "Number of refills authorized (0-12)"
    },
    "special_instructions": {
      "type": "string",
      "required": false,
      "default": "None",
      "description": "Additional patient instructions"
    },
    "days_supply": {
      "type": "integer",
      "required": true,
      "description": "Expected days supply (1-365)"
    },
    "generic_substitution_allowed": {
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Whether generic substitution is permitted"
    },
    "priority_level": {
      "type": "string",
      "required": false,
      "default": "routine",
      "description": "Prescription priority: routine, urgent, or stat"
    }
  },
  "error_messages": [
    "Invalid patient or prescriber ID: IDs must be valid and registered in the system.",
    "Invalid quantity or refills: Quantity must be 1-1000, refills must be 0-12.",
    "Invalid days supply: Days supply must be 1-365.",
    "Missing required prescription data: All mandatory fields must be completed.",
    "Invalid priority level: Use routine, urgent, or stat for priority_level.",
    "Prescription validation failed: The prescription does not meet regulatory requirements."
  ],
  "usage": "Provide all required prescription parameters. The tool generates a complete, legally compliant prescription record ready for transmission to pharmacy.",
  "output_details": {
    "prescription_id": {
      "type": "string",
      "description": "Unique prescription identifier"
    },
    "prescription_date": {
      "type": "string",
      "description": "Date prescription was created (ISO 8601 format)"
    },
    "prescription_text": {
      "type": "string",
      "description": "Complete prescription instructions for patient"
    },
    "pharmacy_instructions": {
      "type": "string",
      "description": "Dispensing instructions for pharmacist"
    },
    "expiration_date": {
      "type": "string",
      "description": "Date when prescription expires (ISO 8601 format)"
    },
    "controlled_substance_schedule": {
      "type": "string",
      "description": "DEA schedule if applicable, otherwise 'N/A'"
    },
    "electronic_signature": {
      "type": "string",
      "description": "Digital signature validation code"
    }
  }
}