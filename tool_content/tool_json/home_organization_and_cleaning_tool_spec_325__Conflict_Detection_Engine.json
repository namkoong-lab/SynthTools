{
  "tool_name": "Conflict Detection Engine",
  "tool_description": "Identifies scheduling conflicts, resource constraints, and timing issues in cleaning schedules and suggests resolutions.",
  "parameters": {
    "template_id": {
      "type": "string",
      "required": true,
      "description": "Schedule template to analyze"
    },
    "blocked_times": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "required": false,
      "description": "Times unavailable for cleaning (ISO format)",
      "default": null
    },
    "resource_limitations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "required": false,
      "description": "Limited cleaning supplies or equipment",
      "default": null
    },
    "check_dependencies": {
      "type": "boolean",
      "required": false,
      "description": "Whether to check task dependency violations",
      "default": true
    }
  },
  "error_messages": [
    "Invalid template_id: Template does not exist",
    "Invalid blocked_times format: Must be valid ISO date-time strings",
    "Resource not found: One or more specified resources don't exist in task definitions"
  ],
  "usage": "Run this tool on schedule templates to identify potential problems before finalizing schedules.",
  "output_details": {
    "conflict_count": {
      "type": "integer",
      "description": "Number of conflicts detected"
    },
    "conflicts": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of specific conflicts found"
    },
    "suggested_resolutions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Recommended ways to resolve conflicts"
    },
    "severity_assessment": {
      "type": "string",
      "description": "Overall conflict severity (low, medium, high)"
    }
  }
}