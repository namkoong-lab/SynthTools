{
  "tool_name": "Regulatory Compliance Checker",
  "tool_description": "Validates frequency plans against regulatory requirements including power limits, band edges, spurious emissions, and coordination rules.",
  "parameters": {
    "frequency_plan": {
      "type": "array",
      "required": true,
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 1000,
      "description": "Site frequency assignments to validate"
    },
    "region_code": {
      "type": "string",
      "required": true,
      "description": "Regulatory region for compliance checking"
    },
    "technology_standard": {
      "type": "string",
      "required": true,
      "description": "Cellular technology (GSM, UMTS, LTE, 5G-NR)"
    },
    "power_levels_dbm": {
      "type": "array",
      "required": true,
      "items": {
        "type": "number"
      },
      "minItems": 1,
      "maxItems": 1000,
      "description": "Transmit power levels corresponding to frequency plan"
    },
    "antenna_gains_dbi": {
      "type": "array",
      "required": false,
      "items": {
        "type": "number"
      },
      "default": "None",
      "description": "Antenna gains for EIRP calculations"
    },
    "coordination_required": {
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Check international coordination requirements"
    },
    "emission_class": {
      "type": "string",
      "required": false,
      "default": "mobile",
      "description": "Equipment emission classification"
    },
    "check_spurious": {
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Validate spurious emission compliance"
    },
    "check_band_edges": {
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Check frequency assignments near band edges"
    },
    "check_eirp_limits": {
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Validate effective radiated power limits"
    }
  },
  "error_messages": [
    "Invalid frequency plan format: Each entry must specify site_id:frequency_mhz.",
    "Mismatched array lengths: frequency_plan, power_levels_dbm, and antenna_gains_dbi arrays must have same length.",
    "Unsupported technology: Use GSM, UMTS, LTE, or 5G-NR standards.",
    "Invalid region code: Use valid ITU region codes or country identifiers.",
    "Power level violations: One or more sites exceed regulatory power limits.",
    "Frequency out of band: Some assignments fall outside licensed spectrum."
  ],
  "usage": "Provide frequency assignments with power levels and regulatory parameters. Returns compliance status and violations requiring correction.",
  "output_details": {
    "compliance_status": {
      "type": "string",
      "description": "Overall compliance result (PASS, FAIL, WARNING)"
    },
    "violations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of regulatory violations found"
    },
    "power_violations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Sites exceeding power limits"
    },
    "coordination_required_sites": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Sites requiring international coordination"
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Suggested corrections for compliance"
    }
  }
}