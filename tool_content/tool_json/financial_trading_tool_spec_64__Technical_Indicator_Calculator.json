{
  "tool_name": "Technical Indicator Calculator",
  "tool_description": "Calculates a comprehensive set of technical indicators from OHLCV data including moving averages, momentum oscillators, volatility measures, and custom indicators for strategy development.",
  "parameters": {
    "input_data": {
      "type": "string",
      "required": true,
      "description": "Path to OHLCV market data"
    },
    "indicators": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "required": true,
      "description": "List of technical indicators to calculate",
      "minItems": 1,
      "maxItems": 30
    },
    "sma_periods": {
      "type": "array",
      "items": {
        "type": "integer"
      },
      "required": false,
      "default": [
        10,
        20,
        50
      ],
      "description": "Periods for simple moving averages"
    },
    "ema_periods": {
      "type": "array",
      "items": {
        "type": "integer"
      },
      "required": false,
      "default": [
        12,
        26
      ],
      "description": "Periods for exponential moving averages"
    },
    "rsi_period": {
      "type": "integer",
      "required": false,
      "default": 14,
      "description": "Period for RSI calculation"
    },
    "bollinger_period": {
      "type": "integer",
      "required": false,
      "default": 20,
      "description": "Period for Bollinger Bands"
    },
    "bollinger_std": {
      "type": "number",
      "required": false,
      "default": 2.0,
      "description": "Standard deviation multiplier for Bollinger Bands"
    },
    "macd_fast": {
      "type": "integer",
      "required": false,
      "default": 12,
      "description": "Fast period for MACD"
    },
    "macd_slow": {
      "type": "integer",
      "required": false,
      "default": 26,
      "description": "Slow period for MACD"
    },
    "macd_signal": {
      "type": "integer",
      "required": false,
      "default": 9,
      "description": "Signal period for MACD"
    },
    "stochastic_k": {
      "type": "integer",
      "required": false,
      "default": 14,
      "description": "K period for Stochastic oscillator"
    },
    "stochastic_d": {
      "type": "integer",
      "required": false,
      "default": 3,
      "description": "D period for Stochastic oscillator"
    },
    "atr_period": {
      "type": "integer",
      "required": false,
      "default": 14,
      "description": "Period for Average True Range"
    }
  },
  "error_messages": [
    "Invalid input data: Cannot access OHLCV data or data format is incorrect",
    "Unsupported indicator: Use supported indicators (SMA, EMA, RSI, MACD, Bollinger, Stochastic, ATR, Williams%R, CCI, ADX)",
    "Invalid period parameter: All period parameters must be positive integers between 1 and 200",
    "Invalid standard deviation: bollinger_std must be between 0.5 and 5.0",
    "Insufficient data: Dataset must have enough rows to calculate the longest period indicator"
  ],
  "usage": "Provide input data path and specify desired indicators. Configure periods and parameters for each indicator family. Returns dataset enriched with calculated technical indicators.",
  "output_details": {
    "indicators_calculated": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of successfully calculated indicators"
    },
    "new_columns": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Names of new columns added to the dataset"
    },
    "calculation_summary": {
      "type": "string",
      "description": "Summary of indicator calculations performed"
    },
    "data_points": {
      "type": "integer",
      "description": "Number of data points in enhanced dataset"
    }
  }
}