{
  "tool_name": "Label Requirements Generator",
  "tool_description": "Determines labeling, documentation, and compliance requirements for shipments based on contents, destination, and carrier specifications.",
  "parameters": {
    "carrier_code": {
      "type": "string",
      "required": true,
      "description": "Selected carrier code"
    },
    "service_type": {
      "type": "string",
      "required": true,
      "description": "Selected service type"
    },
    "destination_country": {
      "type": "string",
      "required": true,
      "description": "Destination country code"
    },
    "item_categories": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "required": true,
      "description": "Categories of items being shipped"
    },
    "declared_value": {
      "type": "number",
      "required": true,
      "description": "Total declared value in USD"
    },
    "signature_required": {
      "type": "boolean",
      "required": false,
      "default": false,
      "description": "Whether delivery signature is required"
    },
    "adult_signature": {
      "type": "boolean",
      "required": false,
      "default": false,
      "description": "Whether adult signature is required"
    }
  },
  "error_messages": [
    "Unsupported carrier service: Label requirements not available for carrier/service combination",
    "Invalid destination country: Country code not recognized",
    "Missing required information: Additional item details needed for international shipping",
    "Label format not supported: Carrier does not support required label format"
  ],
  "usage": "Provide carrier_code, service_type, destination_country, item_categories, declared_value, and signature requirements to determine labeling needs.",
  "output_details": {
    "required_labels": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of required label types"
    },
    "customs_forms": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Required customs documentation"
    },
    "special_handling_labels": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Special handling or warning labels needed"
    },
    "label_specifications": {
      "type": "string",
      "description": "Technical specifications for label printing"
    }
  }
}