{
  "tool_name": "Working Capital Calculator",
  "tool_description": "Calculates and analyzes working capital components and changes for cash flow and valuation impact assessment.",
  "parameters": {
    "current_assets": {
      "type": "array",
      "required": true,
      "description": "Current assets by period",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 10
    },
    "current_liabilities": {
      "type": "array",
      "required": true,
      "description": "Current liabilities by period",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 10
    },
    "accounts_receivable": {
      "type": "array",
      "required": true,
      "description": "Accounts receivable balances",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 10
    },
    "inventory": {
      "type": "array",
      "required": true,
      "description": "Inventory balances",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 10
    },
    "accounts_payable": {
      "type": "array",
      "required": true,
      "description": "Accounts payable balances",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 10
    }
  },
  "error_messages": [
    "Array length mismatch: All working capital components must have the same number of periods.",
    "Insufficient periods: At least 2 periods required to calculate changes.",
    "Negative values invalid: Working capital components cannot be negative.",
    "Data consistency error: Current assets should generally exceed sum of receivables and inventory."
  ],
  "usage": "Input working capital components across multiple periods. Tool calculates working capital metrics, changes, and efficiency ratios.",
  "output_details": {
    "net_working_capital": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Net working capital by period"
    },
    "working_capital_changes": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Period-over-period working capital changes"
    },
    "days_sales_outstanding": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "DSO calculation by period"
    },
    "inventory_turns": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "description": "Inventory turnover ratios"
    },
    "cash_conversion_cycle": {
      "type": "number",
      "description": "Average cash conversion cycle in days"
    }
  }
}