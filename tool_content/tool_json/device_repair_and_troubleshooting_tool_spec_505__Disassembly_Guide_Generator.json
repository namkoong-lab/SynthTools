{
  "tool_name": "Disassembly Guide Generator",
  "tool_description": "Generates detailed step-by-step disassembly instructions for accessing device batteries safely and efficiently.",
  "parameters": {
    "device_model": {
      "type": "string",
      "required": true,
      "description": "Specific device model for disassembly"
    },
    "repair_complexity": {
      "type": "string",
      "required": true,
      "description": "Complexity level: basic, intermediate, advanced"
    }
  },
  "error_messages": [
    "Unsupported device model: Device model not found in repair database.",
    "Invalid complexity level: Choose basic, intermediate, or advanced.",
    "Device requires professional service: This device model requires specialized tools or expertise."
  ],
  "usage": "Specify the exact device model and desired complexity level. The tool generates appropriate disassembly steps for your skill level.",
  "output_details": {
    "total_steps": {
      "type": "integer",
      "description": "Total number of disassembly steps"
    },
    "estimated_time": {
      "type": "integer",
      "description": "Estimated disassembly time in minutes"
    },
    "required_tools": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tools needed for disassembly"
    },
    "step_instructions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Detailed step-by-step instructions"
    },
    "difficulty_rating": {
      "type": "string",
      "description": "Difficulty assessment: easy, moderate, difficult"
    },
    "critical_warnings": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Critical warnings for fragile components"
    }
  }
}